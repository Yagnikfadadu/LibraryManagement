<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:elevation="25dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/list_book_image"
                android:backgroundTint="@color/white"
                android:padding="3dp"
                android:background="@color/white"
                android:src="@color/primaryColor"
                android:layout_width="96dp"
                android:layout_height="96dp"/>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/list_book_title"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:text="Operating System Concepts 10th Edition"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/list_book_author"
                    android:textColor="#424242"
                    android:textSize="10sp"
                    android:layout_marginTop="3dp"
                    android:text="Peter Bear Galvin"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/list_book_ratings"
                    android:layout_marginStart="-3dp"
                    android:src="@raw/five_star"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>