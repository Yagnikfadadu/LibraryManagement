<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clipChildren="false"
    tools:context=".BookActivity">

    <LinearLayout
        android:background="@color/white"
        android:weightSum="10"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_image"
            android:elevation="5dp"
            android:background="@color/white"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:layout_width="215dp"
            android:layout_height="300dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/book_name"
                android:layout_marginHorizontal="20dp"
                android:maxLines="2"
                android:gravity="center"
                android:textSize="21sp"
                android:text="Engineering Design | 6th Edition"
                android:textStyle="bold"
                android:fontFamily="@font/exo_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/book_author"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#919191"
                android:text="Gupta S. P."
                android:fontFamily="@font/exo_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


                <ImageView
                    android:id="@+id/book_image_ratings"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/zero_star"
                    android:layout_width="150dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/text_ratings"
                    android:layout_gravity="center"
                    android:text="/5 (  )"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_publication"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:text="TATA MCGrawHill"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_filed"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:text="Field: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_description"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:text="Description: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_price"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="10dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#00AA70"
                android:text="Price: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_available"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="10dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#00AA70"
                android:text="Available:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/book_wishlist"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="75dp"
            android:text="Add to Wishlist"
            android:paddingVertical="10dp"
            app:cornerRadius="15dp"
            android:textSize="18sp"
            app:strokeColor="@color/primaryColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:layout_marginBottom="25dp"
            android:id="@+id/book_issue"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="55dp"
            android:text="Issue Now"
            android:textAllCaps="false"
            android:paddingVertical="10dp"
            app:cornerRadius="15dp"
            android:textSize="18sp"
            app:strokeColor="@color/primaryColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</ScrollView>